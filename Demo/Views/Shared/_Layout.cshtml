<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    @*Start of Header*@
    <header>
        <center>
            <nav class="mt-5">
                @*1.HTML Tags | Static HTML*@
                <a href="/Home/Index" class=" btn btn-primary m-2">Home</a>

                @* 2.HTML Helper | Server-Side [For ASP.NET Framework] *@
                @* <a href="/Home/Privacy" class=" btn btn-warning m-2">Privacy</a> *@

                @Html.ActionLink(linkText: "Privacy", actionName: "Privacy", controllerName: "Home",htmlAttributes: new {@class = " btn btn-warning m-2" } , routeValues:null)

                @* 3. Tag Helpers | Server-Side [For ASP.NET Core] *@
                @* <a href="/Home/AboutUs" class=" btn btn-success m-2">About Us</a> *@


                <a asp-Controller="Home" asp-Action="AboutUs" asp-route-Id="10" class=" btn btn-success m-2">About Us</a>

                <a href="/Home/ContactUs" class=" btn btn-secondary m-2">Contact Us</a>
                <a href="/Account/SignUp" class=" btn btn-info m-2">Sign Up</a>
                <a href="/Account/Register" class=" btn btn-danger m-2">Register</a>

            </nav>
        </center>
    </header>
    @*End of Header*@
    <div>
        @RenderBody()
    </div>
    @*Start of Footer*@
    <footer>
        <center>
            <p>CopyRights &copy; Route @DateTime.Now.Year </p>
        </center>
    </footer>
    @*End of Footer*@
</body>
</html>
